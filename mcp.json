{
    "globalShortcut": "",
    "mcpServers" : {
    "Yellowbrick": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "YELLOWBRICK_CONNECTION",
        "-e",
        "OPENAI_API_KEY",
        "-e",
        "EMBEDDING_TABLE",
        "ybmcp"
      ],
      "env": {
        "YELLOWBRICK_CONNECTION": "postgresql://[User]:[PWD]]@[HOSTNAME]:[PORT]/[DBNAME]",
        "OPENAI_API_KEY" : "sk-[YourKeyHere]",
        "EMBEDDING_TABLE": "my_embeddings"
      }
    }
  }
}